<Window x:Class="fes_gui_wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:fes_gui_wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <StackPanel Grid.Column="0" Orientation="Vertical">
            <TextBlock Text="Name"/>
            <TextBlock Text="Vorname"/>
            <TextBlock Text="Strasse"/>
            <TextBlock Text="Ort"/>
            <TextBlock Text="PLZ"/>
        </StackPanel>

        <StackPanel Grid.Column="1" Orientation="Vertical">
            <TextBox></TextBox>
            <TextBox Text="{Binding Vorname}"/>
            <TextBox Text="{Binding Strasse}"/>
            <TextBox Text="{Binding Ort}"/>
            <TextBox Text="{Binding PLZ}"/>
        </StackPanel>
        
    </Grid>
</Window>
